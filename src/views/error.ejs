<!-- views/error.ejs -->

<!DOCTYPE html>
<html>
  <head>
    <title>Something went wrong</title>
  </head>
  <body>
    <h1>Something went wrong</h1>
    <p><%= error.message %></p>
    <p>Sorry, something unexpected happened. Please try again later.</p>
    <ul>
      <% links.forEach((link) => { %>
      <li><a href="<%= link.href %>"><%= link.text %></a></li>
      <% }) %>
    </ul>
  </body>
</html>
